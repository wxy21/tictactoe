<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uottawa.tictactoe">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Setting" />
        <activity
            android:name=".name"
            android:label="@string/title_activity_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".help_and_option" />
        <activity
            android:name=".level_difficulty"
            android:label="@string/title_activity_level_difficulty"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".easy_game"
            android:label="@string/title_activity_game"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".match_history"
            android:label="@string/title_activity_match_history"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".medium_game"
            android:label="@string/title_activity_medium_game"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".hard_game"
            android:label="@string/title_activity_hard_game"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>